<h2>East Cost Camping</h2>
<div class="flash_message">
  <% flash.each do |type, message| %>
  <p><%= message %></p>
  <% end %>
</div>


<%= link_to "Create New Post", new_post_path %>

<h1>Camping Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <% if post.category == "Camping" %>
    <li>
      <%= link_to post.title, post%> ||
      <%= post.category %>
    </li>
    <% end %>
  <% end %>
</ul>

<h1>Backpacking Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <% if post.category == "Backpacking" %>
    <li>
      <%= link_to post.title, post%> ||
      <%= post.category %>
    </li>
    <% end %>
  <% end %>
</ul>
