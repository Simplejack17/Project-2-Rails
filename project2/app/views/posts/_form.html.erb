<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :category %>
  <%= select_tag(:category, options_for_select([['Camping', 1], ['Backpacking', 2], ['Dispersed Camping', 3], ['Trails', 4]]) ) %>

  <%= f.submit %>

<% end %>
